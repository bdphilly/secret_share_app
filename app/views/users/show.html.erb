<h1><%= @user.username %></h1>

<h2>Secrets</h2>
<ul id="secrets">
  <% @user.received_secrets.each do |secret| %>
    <li><%= secret.title %></li>
  <% end %>
</ul>

<%= render "secrets/form" %>

<script>
  $("form.#secret-form").on("submit", function (event) {
  	event.preventDefault();

  	var formData = $(this).serialize();
  	$.ajax({
  		url: "/users/" + <%= @user.id %> + "/secrets",
  		type: "POST",
  		data: formData,
  		success: function (formData) {
  			$("ul#secrets").append($("<li>").text(formData.title));
  		}
  	});
  });
</script>