<h2>Post a Secret to <%= @user.username %></h2>

<form id="secret-form" action="<%= user_secrets_url(@user) %>" method="POST" accept-charset="utf-8">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="title">Title</label><input type="text" name="secret[title]" value="" id="title">

  <p><input type="submit" value="Post Secret"></p>
</form>